<UserControl x:Class="SteamWebChat.FriendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamWebChat"
             mc:Ignorable="d" Height="50" MinWidth="250" MinHeight="50" Margin="2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition Width="195*"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" BorderBrush="#FF7DBA35">
            <Image x:Name="avatarImage" OpacityMask="#FF1C1C1D" Margin="0,0,0,0"/>
        </Border>
        <Label Grid.Column="1" x:Name="personaName" Content="Unknown" VerticalContentAlignment="Center" Margin="0" Foreground="#FF7DBA35" Background="#FF1C1C1D"/>
    </Grid>
</UserControl>
